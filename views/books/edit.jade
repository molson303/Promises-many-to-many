extends ../layout 

block content 
  include ../partials/sidebar 
  div.form-container
    div.errors
      if errors 
        each error in errors 
          p= error 
    form(action='/books/#{book.id}' method='post')
      div.form-group
        label(for="author") Title
        input.form-control(type="text" id="title" name='title' value=book.title)
      div.form-group
        label(for="genre") Genre
        input.form-control(type="text" id="genre" name='genre' value=book.genre)
      div.form-group
        label(for="cover_url") Cover Image URL 
        input.form-control(type="text" id="cover_url" name='cover_url' value=book.cover_url)
      div.form-group
        label(for="description") Description
        textarea.form-control(rows="5" id='description' name='description') #{book.description}
      button.btn.btn-primary.edit(type="submit") Edit #{book.title}

                
  
